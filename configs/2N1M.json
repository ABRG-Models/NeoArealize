{
    // Global simulation parameters
    "steps" : 500000,               // Number of steps to simulate for
    "logevery" : 5000,
    "plotevery" : 200,
    "vidframes" : false,
    "hextohex_d" : 0.01,           // Hex to hex distance, determines num hexes
    "svgpath" : "./ellipse.svg",
    "boundaryFalloffDist" : 0.01,
    "D" : 0.1,                     // Global diffusion constant
    "Dprime" : 0.0,
    "contour_threshold" : 0.55,
    "k" : 3,
    "logpath" : "logs/2N1M",
    "overwrite_logs" : true,

    // Array of parameters for N thalamocortical populations:
    "tc": [
        {
            "alpha" : 3,
            "beta"  : 3,
            "gamma" : [-1.0], // Array of interactions of this TC popn and guidance mols
            "xinit" : -0.2,
            "yinit" : 0.0,
            "sigmainit" : 0.05,
            "gaininit" : 0.5
        },
        {
            "alpha" : 3,
            "beta"  : 3,
            "gamma" : [1.0],
            "xinit" : 0.2,
            "yinit" : 0.0,
            "sigmainit" : 0.05,
            "gaininit" : 0.5
        }
    ], // end tc

    // Array of parameters for the guidance molecules
    "guidance": [
        {
            "shape"  : "Sigmoid1D",
            "gain"   : 0.5,
            "phi"    : 0,
            "width"  : 0.1,
            "offset" : 0.0
        }
    ] // end guidance
}
