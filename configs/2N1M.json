{
    // Global simulation parameters
    "steps" : 1000,               // Number of steps to simulate for
    "logevery" : 1000,
    "hextohex_d" : 0.02,           // Hex to hex distance, determines num hexes
    "svgpath" : "./trial.svg",
    "boundaryFalloffDist" : 0.01,
    "D" : 0.5,                     // Global diffusion constant

    // Array of parameters for N thalamocortical populations:
    "tc": [
        {
            "alpha" : 3,
            "beta"  : 3,
            "gamma" : [1.0, -1.0] // Array of interactions of this TC popn and guidance mols
        },
        {
            "alpha" : 3,
            "beta"  : 3,
            "gamma" : [-0.5, 0.75]
        }
    ], // end tc

    // Array of parameters for the guidance molecules
    "guidance": [
        {
            "shape"  : "Sigmoid1D",
            "gain"   : 0.2,
            "phi"    : 1.57,
            "width"  : 0.15,
            "offset" : 0.0
        }
    ] // end guidance
}
