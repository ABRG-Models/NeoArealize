{
    // Global simulation parameters
    "steps" : 5000,               // Number of steps to simulate for
    "logevery" : 1000,
    "plotevery" : 10,
    "vidframes" : true,
    "hextohex_d" : 0.01,           // Hex to hex distance, determines num hexes
    "svgpath" : "./ellipse.svg",
    "boundaryFalloffDist" : 0.01,
    "D" : 0.05,                     // Global diffusion constant
    "contour_threshold" : 0.55,
    "k" : 3,
    "logpath" : "logs/4N2M",
    "overwrite_logs" : true,

    // Array of parameters for N thalamocortical populations:
    "tc": [
        {
            "alpha" : 3,
            "beta"  : 3,
            "gamma" : [1,1] // Array of interactions of this TC popn and guidance mols
        },
        {
            "alpha" : 3,
            "beta"  : 3,
            "gamma" : [-1,1]
        },
        {
            "alpha" : 3,
            "beta"  : 3,
            "gamma" : [1,-1]
        },
        {
            "alpha" : 3,
            "beta"  : 3,
            "gamma" : [-1,-1]
        }
    ], // end tc

    // Array of parameters for the guidance molecules
    "guidance": [
        {
            "shape"  : "Sigmoid1D",
            "gain"   : 1,
            "phi"    : 0,
            "width"  : 0.3,
            "offset" : 0.0
        },
        {
            "shape"  : "Sigmoid1D",
            "gain"   : 1,
            "phi"    : 1.57,
            "width"  : 0.3,
            "offset" : 0.0
        }
    ] // end guidance
}
