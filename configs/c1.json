{
    // Global simulation parameters
    "steps" : 5000,                // Number of steps to simulate for
    "logevery" : 10,               // How often to log
    "hextohex_d" : 0.03,           // Hex to hex distance, determines num hexes
    "svgpath" : "./ellipse.svg",
    "boundaryFalloffDist" : 0.01,
    "D" : 0.1,                     // Global diffusion constant

    // Array of parameters for N thalamocortical populations:
    "tc": [
        // The first TC population
        {
            "alpha" : 3,
            "beta" : 3,
            "gamma" : [1.0,1.0] // Array of interactions of this TC popn and guidance mols
        },
        // The next TC population
        {
            "alpha" : 3,
            "beta" : 3,
            "gamma" : [-1.0,1.0]
        } // and so on.
    ], // end tc

    // Array of parameters for the guidance molecules
    "guidance": [
        {
            "shape" : "Sigmoid1D", // and so on
            "gain" : 0.5,
            "phi" : 0.8,
            "width" : 0.2,
            "offset" : 0.0
        },
        {
            "shape" : "Sigmoid1D", // and so on
            "gain" : 0.5,
            "phi" : -0.8,
            "width" : 0.1,
            "offset" : 0.0
        }
    ] // end guidance
}
